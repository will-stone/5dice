{
  "name": "5dice",
  "version": "1.13.2",
  "description": "Terminal dice game. In no way related to Yahtzee ;-)",
  "bugs": {
    "url": "https://github.com/will-stone/5dice/issues"
  },
  "repository": {
    "url": "https://github.com/will-stone/5dice"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "hello@wstone.uk",
    "url": "https://wstone.uk"
  },
  "type": "module",
  "bin": {
    "5dice": "dist/cli.js"
  },
  "files": [
    "dist/*",
    "screenshot.png"
  ],
  "scripts": {
    "build": "tsup source/cli.tsx --format esm --target node20",
    "postinstall": "husky install",
    "lint": "eslint . --ignore-path .gitignore",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepublishOnly": "npm run build",
    "start": "npm run build -- --watch --onSuccess \"node ./dist/cli.js\"",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react",
      "@will-stone/eslint-config/prettier"
    ]
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.2.0",
    "ink": "^4.4.1",
    "ink-divider": "^3.0.0",
    "ink-link": "^2.0.1",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^3.4.3",
    "open": "^9.1.0",
    "picocolors": "^1.0.0",
    "react": "^18.2.0",
    "read-pkg": "^8.0.0",
    "tings": "^7.0.5",
    "type-fest": "^3.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/ink-gradient": "^2.0.4",
    "@types/jsonfile": "^6.1.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.8",
    "@types/react": "^18.2.47",
    "@will-stone/eslint-config-base": "^7.1.2",
    "@will-stone/eslint-config-node": "^2.0.2",
    "@will-stone/eslint-config-prettier": "^3.0.1",
    "@will-stone/eslint-config-react": "^3.0.2",
    "@will-stone/eslint-config-typescript": "^7.0.0",
    "@will-stone/prettier-config": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-vitest": "^0.3.20",
    "husky": "^8.0.3",
    "ink-testing-library": "^3.0.0",
    "lint-staged": "^13.2.2",
    "pinst": "^3.0.0",
    "prettier": "^3.1.1",
    "tsup": "^6.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=20"
  }
}
