{
  "name": "5dice",
  "version": "1.11.3",
  "description": "Terminal dice game. In no way related to Yahtzee ;-)",
  "bugs": {
    "url": "https://github.com/will-stone/5dice/issues"
  },
  "repository": {
    "url": "https://github.com/will-stone/5dice"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "hello@wstone.io",
    "url": "https://wstone.io"
  },
  "bin": {
    "5dice": "dist/cli.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsc",
    "postinstall": "husky install",
    "lint": "eslint . --ignore-path .gitignore",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "release": "np",
    "start": "tsc-watch --onSuccess \"node ./dist/cli.js\"",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react",
      "@will-stone/eslint-config/prettier"
    ],
    "rules": {
      "unicorn/no-null": "off"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "ink": "^3.0.9",
    "ink-divider": "^3.0.0",
    "ink-gradient": "^2.0.0",
    "ink-link": "^2.0.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "mobx": "^6.3.2",
    "mobx-react-lite": "^3.2.0",
    "open": "^8.2.1",
    "react": "^17.0.2",
    "tings": "^1.0.1",
    "zod": "^3.8.1"
  },
  "devDependencies": {
    "@types/ink-gradient": "^2.0.1",
    "@types/jest": "^27.0.1",
    "@types/jsonfile": "^6.0.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.7.8",
    "@types/react": "^17.0.19",
    "@will-stone/eslint-config": "^3.0.4",
    "@will-stone/prettier-config": "^4.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "ink-testing-library": "^2.1.0",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "np": "^7.5.0",
    "pinst": "^2.1.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": ">=12"
  }
}
