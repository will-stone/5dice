{
  "name": "5dice",
  "version": "1.13.0",
  "description": "Terminal dice game. In no way related to Yahtzee ;-)",
  "bugs": {
    "url": "https://github.com/will-stone/5dice/issues"
  },
  "repository": {
    "url": "https://github.com/will-stone/5dice"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "hello@wstone.io",
    "url": "https://wstone.io"
  },
  "type": "module",
  "bin": {
    "5dice": "dist/cli.js"
  },
  "files": [
    "dist/*",
    "screenshot.png"
  ],
  "scripts": {
    "build": "tsc",
    "postinstall": "husky install",
    "lint": "eslint . --ignore-path .gitignore",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepublishOnly": "npm run build",
    "start": "tsc-watch --onSuccess \"node ./dist/cli.js\"",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react",
      "@will-stone/eslint-config/prettier"
    ],
    "rules": {
      "unicorn/no-null": "off"
    }
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.1",
    "fs-extra": "^11.1.0",
    "ink": "^4.0.0",
    "ink-divider": "^3.0.0",
    "ink-link": "^2.0.1",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "mobx": "^6.8.0",
    "mobx-react-lite": "^3.4.3",
    "open": "^8.4.2",
    "picocolors": "^1.0.0",
    "react": "^18.2.0",
    "read-pkg": "^7.1.0",
    "tings": "^7.0.1",
    "type-fest": "^3.6.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/ink-gradient": "^2.0.1",
    "@types/jest": "^29.5.0",
    "@types/jsonfile": "^6.1.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@will-stone/eslint-config-base": "^7.0.2",
    "@will-stone/eslint-config-jest": "^3.0.0",
    "@will-stone/eslint-config-node": "^2.0.1",
    "@will-stone/eslint-config-prettier": "^2.0.3",
    "@will-stone/eslint-config-react": "^3.0.1",
    "@will-stone/eslint-config-typescript": "^5.1.0",
    "@will-stone/prettier-config": "^6.0.4",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=18"
  }
}
