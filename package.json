{
  "name": "5dice",
  "version": "2.0.0",
  "description": "Terminal dice game. In no way related to Yahtzee ;-)",
  "bugs": {
    "url": "https://github.com/will-stone/5dice/issues"
  },
  "repository": {
    "url": "https://github.com/will-stone/5dice"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "hello@wstone.uk",
    "url": "https://wstone.uk"
  },
  "type": "module",
  "bin": {
    "5dice": "dist/cli.js"
  },
  "files": [
    "dist/*",
    "screenshot.png"
  ],
  "scripts": {
    "build": "tsup source/cli.tsx --format esm --target node20",
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "npm run build",
    "start": "npm run build -- --watch --onSuccess \"node ./dist/cli.js\"",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "dependencies": {
    "2n8": "^0.5.1",
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.2.0",
    "immer": "^10.1.1",
    "ink": "^5.1.0",
    "ink-divider": "^3.0.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "open": "^10.1.0",
    "picocolors": "^1.0.1",
    "react": "^18.3.1",
    "tings": "^9.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.3",
    "@types/ink-gradient": "^2.0.4",
    "@types/jsonfile": "^6.1.4",
    "@types/lodash": "^4.17.4",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@will-stone/eslint-config": "^12.1.0",
    "@will-stone/prettier-config": "^8.0.1",
    "eslint": "^9.16.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.4.1",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "typescript": "^5.7.2",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "eslint": "$eslint"
  }
}
