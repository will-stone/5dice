{
  "name": "5dice",
  "version": "1.7.0",
  "description": "Terminal dice game. In no way related to Yahtzee ;-)",
  "bugs": {
    "url": "https://github.com/will-stone/5dice/issues"
  },
  "repository": {
    "url": "https://github.com/will-stone/5dice"
  },
  "license": "MIT",
  "bin": {
    "5dice": "dist/cli.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsc",
    "postinstall": "husky install",
    "lint": "eslint . --ignore-path .gitignore",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "release": "np",
    "start": "tsc-watch --onSuccess \"node ./dist/cli.js\"",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react"
    ],
    "rules": {
      "unicorn/no-null": "off"
    }
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "ink": "^3.0.8",
    "ink-divider": "^3.0.0",
    "ink-gradient": "^2.0.0",
    "ink-link": "^2.0.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.20",
    "mobx": "^6.1.7",
    "mobx-react-lite": "^3.2.0",
    "react": "^16.14.0",
    "tings": "^0.0.26",
    "zod": "^3.0.0-alpha.4"
  },
  "devDependencies": {
    "@types/ink-divider": "^2.0.1",
    "@types/ink-gradient": "^2.0.1",
    "@types/jest": "^26.0.20",
    "@types/jsonfile": "^6.0.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.28",
    "@types/react": "^17.0.1",
    "@will-stone/eslint-config": "^2.0.1",
    "@will-stone/prettier-config": "^3.1.1",
    "eslint": "^7.21.0",
    "husky": "^5.0.9",
    "ink-testing-library": "^2.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "np": "^7.4.0",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.2"
  },
  "engines": {
    "node": ">=12"
  }
}
